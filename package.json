{
  "name": "kotani-core",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": "false",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@celo/contractkit": "^2.0.0",
    "@golevelup/ts-jest": "^0.3.3",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/mongoose": "^9.1.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^7.6.15",
    "@types/passport-jwt": "^3.0.6",
    "bcrypt": "^5.0.1",
    "bip39-light": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-mongo": "^4.6.0",
    "express-session": "^1.17.3",
    "firebase-admin": "^10.2.0",
    "mongoose": "^6.3.5",
    "openid-client": "^5.1.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@kotanicore/kyc/(.*)": "<rootDir>/libs/kyc/src/$1",
      "@kotanicore/blockchain/(.*)": "<rootDir>/libs/blockchain/src/$1",
      "@kotanicore/blockchain": "<rootDir>/libs/blockchain/src",
      "@kotanicore/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@kotanicore/auth": "<rootDir>/libs/auth/src",
      "@kotanicore/repository/(.*)": "<rootDir>/libs/repository/src/$1",
      "@kotanicore/repository": "<rootDir>/libs/repository/src",
      "@kotanicore/repo-orm/(.*)": "<rootDir>/libs/repo-orm/src/$1",
      "@kotanicore/repo-orm": "<rootDir>/libs/repo-orm/src",
      "kotanicore/core/(.*)": "<rootDir>/libs/core/src/$1",
      "kotanicore/core": "<rootDir>/libs/core/src",
      "@kotanicore/services/(.*)": "<rootDir>/libs/services/src/$1",
      "@kotanicore/services": "<rootDir>/libs/services/src"
    }
  }
}
